{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2018",
    "module":"ESNext",
    "lib": ["dom", "es2021"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "exlcude": [
    "tests/**/*"
  ]
}
